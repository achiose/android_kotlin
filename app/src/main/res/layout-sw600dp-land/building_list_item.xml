<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/building_image"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toEndOf="@id/building_image"
            android:gravity="center"
            android:text="Flatiron Building"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/building_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/building_name"
            android:layout_below="@+id/building_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/building_image">

            <ImageView
                android:id="@+id/building_location_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/building_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/building_location_image"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="100 Peach Street"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/building_room_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/building_name"
            android:layout_below="@+id/building_location_container"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/building_image">

            <ImageView
                android:id="@+id/building_room_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/building_room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/building_room_image"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="5 rooms"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/building_flags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/building_name"
            android:layout_below="@+id/building_room_container"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/building_image">

            <ImageView
                android:id="@+id/building_flag_presentation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                android:visibility="visible"
                android:src="@android:drawable/ic_menu_view" />

            <ImageView
                android:id="@+id/building_flag_wifi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                android:visibility="visible"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_menu_view" />

            <ImageView
                android:id="@+id/building_flag_parking"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                android:layout_marginStart="4dp"
                android:visibility="visible"
                android:src="@android:drawable/ic_menu_view" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>